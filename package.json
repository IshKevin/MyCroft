{
  "name": "mycroft",
  "displayName": "MyCroft",
  "description": "Track and log your coding activities to GitHub",
  "version": "1.1.0",
   "publisher": "Mycroft",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:mycroft.initRepo",
    "onView:mycroftView"
  ],
  "main": "./out/extension.js",
  "icon": "resources/mycroftMain.png",
  "contributes": {
    "commands": [
      {
        "command": "mycroft.initRepo",
        "title": "MyCroft: Initialize Activity Tracking Repository"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mycroft-sidebar",
          "title": "MyCroft",
          "icon": "resources/mycroft.png"
        }
      ]
    },
    "views": {
      "mycroft-sidebar": [
        {
          "id": "mycroftView",
          "name": "Activity Logger",
          "type": "webview"
        }
      ]
    },
    "configuration": {
      "title": "MyCroft",
      "properties": {
        "mycroft.githubToken": {
          "type": "string",
          "description": "GitHub Personal Access Token"
        },
        "mycroft.repositoryName": {
          "type": "string",
          "description": "Name of the GitHub repository to store activities"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@octokit/rest": "^21.1.0",
    "chart.js": "^4.4.7"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/IshKevin/MyCroft.git"
  },
  "license": "MIT",
  "homepage": "https://github.com/IshKevin/MyCroft.git",
  "bugs": {
    "url": "https://github.com/IshKevin/MyCroft/issues"
  },
  "author": {
    "name": "Ishi Kevin",
    "email": "carterk279@gmail.com"
  },
  "keywords": [
    "GitHub",
    "Activity Tracking",
    "Coding Logger"
  ]
}
